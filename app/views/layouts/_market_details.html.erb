<!-- Market Details -->
<!-- Must be inside a <form> tag!-->
<div id="market-details-panel" class="panel panel-primary">
  <div class="panel-heading">Market Filter</div>
  <div class="panel-body">

	  <div class="row">
	    <% if region_only %>
	    <div class="col-xs-12 col-md-8">
	    <% else %>
	    <div class="col-xs-12">
	    <% end %>
	      <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <%= radio_button_tag :market_in, :region, item.market_in.nil? || item.market_in == "region" %>
            </span>
            <span class="input-group-addon">Region</span>
            <% item.region_id.nil? ? region = 10000002 : region = item.region_id %>
            <%= select_tag(:region_id, options_for_select(Region.all.map{ |r| [r.name, r.id] }, region), :class=>"form-control") %>
          </div>
        </div>
	    </div>
	    
	    <% if region_only %>
	    <div class="col-xs-12 col-md-4">
	      <div class="form-group">
          <%= link_to "Update Region", "/markets/#{item.region_id}/types/#{item.type_id}", :id => "update-region", :class => "btn btn-primary" %>
	      </div>
	    </div>
	    <% end %>
    </div>
    
    <% if !region_only %>
    <div class="row">
		  <div class="col-xs-12">
		    <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <%= radio_button_tag :market_in, :solar_system, item.market_in == "solar_system" %>
            </span>
            <span class="input-group-addon">Solar System</span>
            <span id="solar_id" style="display:none"><%= item.solar_id %></span>
            <%= text_field_tag :solar_name, item.solar_name, :placeholder => "Name", :autocomplete => :off, :data => { :provide =>"typeahead", :source => SolarSystem.all.map{ |s| s.name } }, :class=>"form-control" %>
          </div>
        </div>
		  </div>
	  </div>
    <% end %>
	
  </div>
</div>
<!-- Market Details End -->
